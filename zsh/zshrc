source ~/dotfiles/zsh/zsh_aliases
source ~/dotfiles/zsh/zsh-autosuggestions/zsh-autosuggestions.zsh
source ~/dotfiles/zsh/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh

export EDITOR=vim
export HISTFILE=~/.zsh_history
export HISTFILESIZE=1000000
export HISTSIZE=1000000
export SAVEHIST=1000000
setopt HIST_IGNORE_ALL_DUPS
setopt AUTOCD
bindkey '^I' menu-expand-or-complete
zstyle ':completion:*' menu select

setopt prompt_subst
PROMPT=
# Current directory.
PROMPT="${PROMPT}%F{green}%~"
# Exit code of previous command.
PROMPT="${PROMPT}%(0?;; %F{red}%?%f)"
# Terminator.
PROMPT="${PROMPT}$ "

title() {
    printf '\x1b]2;%s\x07' "${1}" # gnome-terminal
}

typeset -A ZSH_HIGHLIGHT_STYLES
_cyan='fg=6'
_redish='fg=9'
_error='fg=red'
ZSH_HIGHLIGHT_STYLES[alias]="${_cyan}"
ZSH_HIGHLIGHT_STYLES[arg0]="${_cyan}"
ZSH_HIGHLIGHT_STYLES[builtin]="${_cyan}"
ZSH_HIGHLIGHT_STYLES[command]="${_cyan},underline"
ZSH_HIGHLIGHT_STYLES[comment]='fg=10'
ZSH_HIGHLIGHT_STYLES[default]="${_redish}"
ZSH_HIGHLIGHT_STYLES[dollar-quoted-argument-unclosed]="${_error}"
ZSH_HIGHLIGHT_STYLES[double-hypen-option]="${_redish}"
ZSH_HIGHLIGHT_STYLES[double-quoted-argument-unclosed]="${_error}"
ZSH_HIGHLIGHT_STYLES[function]="${_cyan}"
ZSH_HIGHLIGHT_STYLES[hashed-command]="${_cyan},underline"
ZSH_HIGHLIGHT_STYLES[path]="${_redish},underline"
ZSH_HIGHLIGHT_STYLES[precommand]="${_cyan}"
ZSH_HIGHLIGHT_STYLES[reserved-word]='fg=093'
ZSH_HIGHLIGHT_STYLES[single-hyphen-option]="${_redish}"
ZSH_HIGHLIGHT_STYLES[single-quoted-argument-unclosed]="${_error}"
ZSH_AUTOSUGGEST_HIGHLIGHT_STYLE='fg=238'

[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh
