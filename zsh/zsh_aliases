# Git
alias gs="git status -s -b && { git ql 2>/dev/null || : }"
alias gc="git commit -v"
alias g.c="git commit -am"
alias g.="git add -p"
alias gi="git add -i"
# alias g^="git push"
alias gr="git rebase"
# alias gls="git log --stat"
alias gd="git diff"
alias gdd="git diff --cached"
# alias gv="git pull --ff --commit"
alias gp="git checkout -p"
#alias go="git checkout"
alias gfp="git fetch && git pull"
alias gar="git add --all"
alias gl="git diff -C --stat HEAD"
# alias ga="git commit --amend --reuse-message=HEAD"

# Shortcut
alias cd.="cd ../"
alias cd..="cd ../../"
alias cd...="cd ../../../"
alias vi="vim"
alias python="python3"
alias pip="pip3"
alias ls="ls --color=auto"
alias 'gist'="gist-paste -p"
alias run="firefox"
