set so=5
set ruler
set ignorecase
set smartcase
set hlsearch
set incsearch
set tw=80 cc=80

filetype plugin on
filetype indent on

set history=500

set noshowmatch
set nosm
let g:loaded_matchparen=1

autocmd FileType python map <buffer> <F1> <esc>:w<CR>:exec '!python3' shellescape(@%, 1)<CR>

command -nargs=+ Grep :vimgrep "<args>" **/* | copen

nmap <silent> <unique> <Leader>l :nohlsearch<CR>

set wildmenu
set relativenumber
set expandtab
set laststatus=2
set shiftwidth=4 "1 tab == 4 spaces
set softtabstop=-1

set rtp+=~/.fzf/
nmap <unique> <Leader>b :call fzf#run({'sink': 'tabedit', 'down': '40%'})<CR>
nmap <unique> <C-P> :call fzf#run({'sink': 'edit', 'down': '40%'})<CR>

" Everything from here to below is from -> @strager: https://github.com/strager
" Dislpay
set list
set listchars=
set listchars+=precedes:<,extends:>
set listchars+=tab:â‡¥\ 

set noai "Do not auto indent
set nowrap "Do not wrap lines
set nosmartindent
set nojoinspaces
set numberwidth=3
set nostartofline
set formatoptions=cloqr
set backspace=indent,eol,start
set completeopt=menu,preview

syntax enable
set background=dark
let g:solarized_termtrans=1
colorscheme solarized

" Change tab in vim
let s:i = 1
while s:i <= 10
  execute printf(
    \ 'nnoremap <unique> <Leader>%d :%dtabnext<CR>',
    \ s:i == 10 ? 0 : s:i,
    \ s:i,
  \ )
  let s:i += 1
endwhile

set rtp+=/usr/share/vim/addons "Quick-lint-js

let g:ale_set_signs = 0
let g:ale_lint_delay = 0
let g:ale_set_highlights = 1
let g:ale_lint_on_text_changed = 'always'
highlight ALEError ctermbg=none ctermfg=red cterm=underline
highlight ALEWarning ctermbg=none ctermfg=red cterm=underline

set directory=~/.vim/swap/
set statusline+=%=%(%l,%c%V%) "Line, col
set statusline=\ \ \ %<%f\ %m "Filename [-]

" Terminal window title
set title
set titlestring=%t

" Handle esc fast
set esckeys
set notimeout ttimeout ttimeoutlen=0
set showcmd
